@model UTMUSIC.Web.Models.ArtistData

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    @using (Html.BeginForm("Update", "Artist", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Artist</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form__field">
                @Html.LabelFor(model => model.Genre, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-4">
                    @Html.EnumDropDownListFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control rounded-0 " } })
                    @Html.ValidationMessageFor(model => model.ArtistInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form__field" rows ="3">
                @Html.LabelFor(model => model.ArtistInfo, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.ArtistInfo, new { htmlAttributes = new { @class = "form-control", rows = "10",cols = "50"}})
                    @Html.ValidationMessageFor(model => model.ArtistInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form__field">
                <div>Artist's Photo</div>
                <div class="col-md-4">
                    <img src="@Url.Content(Model.PhotoPath)"/>
                </div>
            </div>


            <div class="form__field">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" value="update" class="button1" />
                </div>
            </div>
        </div>
    }

</div>