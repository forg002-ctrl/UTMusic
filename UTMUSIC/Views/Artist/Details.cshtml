@model UTMUSIC.Web.Models.ArtistData

@{
    ViewBag.Title = "Artist's Page";
}
<!-- Songs details section -->
<section class="songs-details-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="song-details-box">
                            <h3>@Model.Name</h3>
                            <div class="artist-details">
                                <img src="@Url.Content(Model.PhotoPath)" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="song-details-box">
                            <h3>Popular Songs</h3>
                            @if (Model.Songs.Count >= 3)
                            {
                                for (int i = 0; i < 3; ++i)
                                {
                                    <!-- song -->
                                    <div class="song-item">
                                        <div class="row">
                                            <div class="col-xl-5 col-lg-12 col-md-5">
                                                <div class="song-info-box">
                                                    @if (@Model.Songs[i].ImagePath == null)
                                                    {
                                                        <img src="@Url.Content("~/Content/img/defaultSong.png")" alt="">
                                                    }
                                                    else
                                                    {
                                                        <img src="@Url.Content(@Model.Songs[i].ImagePath)" alt="">
                                                    }
                                                    <div class="song-info">
                                                        <h4>@Model.Name</h4>
                                                        <p>@Model.Songs[i].Name</p>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="col-xl-7 col-lg-12 col-md-7">
                                                <div class="single_player_container">
                                                    <div class="single_player">
                                                        <div class="jp-jplayer jplayer" data-ancestor=".jp_container_@i" data-url="@Url.Content(Model.Songs[i].AudioPath)"></div>
                                                        <div class="jp-audio jp_container_@i" role="application" aria-label="media player">

                                                            <div class="jp-gui jp-interface">
                                                                <!-- Player Controls -->
                                                                <div class="player_controls_box">
                                                                    <button class="jp-prev player_button" tabindex="0"></button>
                                                                    <button class="jp-play player_button" tabindex="0"></button>
                                                                    <button class="jp-next player_button" tabindex="0"></button>
                                                                    <button class="jp-stop player_button" tabindex="0"></button>
                                                                </div>
                                                            </div>
                                                            <!-- Progress Bar -->
                                                            <div class="player_bars">
                                                                <div class="jp-progress">
                                                                    <div class="jp-seek-bar">
                                                                        <div>
                                                                            <div class="jp-play-bar">
                                                                                <div class="jp-current-time" role="timer" aria-label="time">0:00</div></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="jp-duration ml-auto" role="timer" aria-label="duration">00:00</div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <p>@Model.ArtistInfo</p>
                    </div>
                    <div class="col-lg-6">
                        <div class="album-info-box">
                            <h3>Popular Albums</h3>
                            @for(int i = 0; i < Model.Albums.Count; ++i)
                            {
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="album-item">
                                            <a href=@Url.Action("Details", "Album", new {id = Model.Albums[i].Id})>
                                                <img alt="Rap" src="@Url.Content(Model.Albums.Last().PhotoPath)">>
                                            </a>
                                            <div class="ci-text">
                                                <h4>@Model.Albums.Last().Name</h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="album-item">
                                            <a href="#">
                                                <img alt="Rap" src="@Url.Content("~/Content/DbData/rap/loqiemean/albums/Loqiemean - Сожги Этот Альбом LP [Dropmp3.ru]/front.jpg")">>
                                            </a>
                                            <div class="ci-text">
                                                <h4>Сожги этот Альбом</h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="album-item">
                                            <a href="#">
                                                <img alt="Rap" src="@Url.Content("~/Content/DbData/rap/loqiemean/albums/Loqiemean - Контроль [Dropmp3.me]/front.jpg")">>
                                            </a>
                                            <div class="ci-text">
                                                <h4>Контроль</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-lg-3">
                <div class="song-details-box">
                    <div class="row">
                        <div class="col-lg-2">
                            <a href=@Url.Action("Create", "Song", new {id = Model.Id}) class="plus">
                            </a>
                        </div>
                        <div class="col-lg-10">
                            <h4>
                                Add Artist's Song
                            </h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-2">
                            <a href=@Url.Action("Create", "Album", new {id = Model.Id}) class="plus">
                            </a>
                        </div>
                        <div class="col-lg-10">
                            <h4>
                                Add Artist's Album
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
