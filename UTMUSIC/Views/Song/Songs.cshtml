@model List<UTMUSIC.Web.Models.SongData>

@{
    ViewBag.Title = "Songs";
}
<div class="container-fluid">
    <div class="container">
        <br />
        <div class="row justify-content-center">
            <div class="col-md-4 col-lg-4">
                <div class="row">
                    @using (Html.BeginForm("Songs", "Song", FormMethod.Post))
                    {
                        <input class="form-control" type="text" name="searchLine" placeholder="Search" aria-label="Search">
                    }
                </div>
            </div>
            <!--end of col-->
        </div>
    </div>
    @if (Model.Count == 0)
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        <div class="square-fill"></div>
                    </div>
                </div>
                <div class="row">
                    <h7>
                        There isn't any songs with such name
                    </h7>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-lg-4">
                    <div class="square-fill"></div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @for (int i = 0; i < @Model.Count; ++i)
            {
                <!-- song -->
                <div class="song-item">
                    <div class="row">
                        <div class="col-xl-5 col-lg-12 col-md-5">
                            <div class="song-info-box">
                                @if (@Model[i].ImagePath == null)
                                {
                                    <img src="@Url.Content("~/Content/img/defaultSong.png")" alt="">
                                }
                                else
                                {
                                    <img src="@Url.Content(@Model[i].ImagePath)" alt="">
                                }
                                <div class="song-info">
                                    <h4>@Model[i].Artist.Name</h4>
                                    <p>@Model[i].Name</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-7 col-lg-12 col-md-7">
                            <div class="single_player_container">
                                <div class="single_player">
                                    <div class="jp-jplayer jplayer" data-ancestor=".jp_container_@i" data-url="@Url.Content(Model[i].AudioPath)"></div>
                                    <div class="jp-audio jp_container_@i" role="application" aria-label="media player">

                                        <div class="jp-gui jp-interface">
                                            <!-- Player Controls -->
                                            <div class="player_controls_box">
                                                <button class="jp-prev player_button" tabindex="0"></button>
                                                <button class="jp-play player_button" tabindex="0"></button>
                                                <button class="jp-next player_button" tabindex="0"></button>
                                                <button class="jp-stop player_button" tabindex="0"></button>
                                            </div>
                                        </div>
                                        <!-- Progress Bar -->
                                        <div class="player_bars">
                                            <div class="jp-progress">
                                                <div class="jp-seek-bar">
                                                    <div>
                                                        <div class="jp-play-bar">
                                                            <div class="jp-current-time" role="timer" aria-label="time">0:00</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="jp-duration ml-auto" role="timer" aria-label="duration">00:00</div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
            }
        </div>
    }
    </div>

